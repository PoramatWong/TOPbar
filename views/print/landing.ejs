<%- include("../partials/header.ejs") %>
  <div class="album py-5 bg-light">
    <div class="container">
      <a href="/prints/lowToHigh" class="btn btn-sm btn-outline-secondary">Price : Low to High</a>
      <a href="/prints/highToLow" class="btn btn-sm btn-outline-secondary">Price : High to Low</a>
      <br>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% prints.forEach(function(prints){ %>
        <div class="col">
          <div class="card shadow-sm">
            <img src="<%= prints.image %>" height="300px" class="index-image">
            <div class="card-body">
              <p class="card-text">Name : <%= prints.name %></p>
              <p class="card-text">Price : à¸¿ <%= prints.price %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/prints/<%=prints._id%>" class="btn btn-sm btn-outline-secondary">View</a>
                  <% if(currentUser){ %>                
                      <a href="/prints/<%= prints._id %>/addToCart" class="btn btn-sm btn-outline-secondary">Add to cart</a> 
                  <% } %>
                </div>

              </div>
            </div>
          </div>
        </div>
      <% }) %>
        </div>
      </div>
    </div>
<%- include("../partials/footer.ejs") %>