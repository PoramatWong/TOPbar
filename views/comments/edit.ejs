<%- include("../partials/header.ejs") %>
<form action="/prints/<%= print_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="container mt-4">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <h2 id="center" class="forms-inputs mb-4">Edit your comment</h2>
                <div class="card px-5 py-5" id="form1">
                    <div class="form-data" v-if="!submitted">
                        <div class="forms-inputs mb-4"> 
                            <input type="text" class="form-control"  name = "comment[text]" placeholder ="<%= comment.text %>" value = "<%= comment.text %>">
                        </div>
                        <div class="mb-3"> 
                            <button type="submit" class="btn btn-dark w-100">Submit</button> 
                        </div>
                        <div class="mb-3"> 
                            <a href="/prints/<%= print_id %>" class="btn btn-dark w-100">Back</a> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<%- include("../partials/footer.ejs") %>