<%- include("../partials/header.ejs") %>
<div class="container mt-5">
    
    <div class="row d-flex justify-content-center">
        
        <div class="col-md-7">
            
            <div class="card p-3 py-4">
                
                <div class="text-center">
                    <img src="<%= user.profileImage %>" width="100" class="rounded-circle">
                </div>
                
                <div class="text-center mt-3">
                    <h6 class="bg-secondary p-1 px-4 rounded text-white"><%= user.name %></h6>
                    <span class="mt-2 mb-0">E-mail : <%= user.email %></span>
                    <p>Tel. : <%= user.phone %></p>
                    
                    <div class="px-4 mt-1">
                        <p class="fonts">Address : <%= user.address %></p>
                    
                    </div>   
                </div>               
            </div>            
        </div>       
    </div> 
</div>
<%- include("../partials/footer.ejs") %>